<div class="row">
  <aside class="col-sm-7 mx-auto">
    <div class="card">
      <div class="card-body">
        <img class="rounded-circle img-fluid d-block mx-auto" src="<%= gravatar_url(@user, { size: 200 }) %>" alt="">
        <h2 class="mt-2 text-center"><%= @user.name %></h2>
      </div>
      <%= render 'relationships/follow_button', user: @user %>
    </div>
  </aside>
  <div class="col-sm-7 mx-auto">
    <ul class="nav nav-tabs nav-justified mb-1">
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>

      <li class="nav-item"><a href="#" class="nav-link">Elementer</a></li>
    </ul>
    <ul class="nav nav-tabs nav-justified">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Diary<span class="badge badge-secondary"><%= @count_diaries %></span></a></li>
    </ul>
     <%= render 'users', users: @followers %>
  </div>
</div>
