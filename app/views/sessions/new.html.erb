<div class="text-center">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %> <!--全てのフォームデータが :session の中に入る-->

      <div class="form-group">
        <%= f.label :email, 'メール' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
    <% end %>
    <h2 class="mt-5">あなたも日記をつけてみよう！</h2>
     <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary mx-auto mt-3' %>
  </div>
</div>